extends ../angularjs

block content
 div(ng-controller='insertCtl')
    form.form-horizontal
      div.form-group
        label.col-md-1.control-label 이름 :
        div.col-md-2
          input(type='text',class="form-control",ng-model="name")
        label.col-md-1.control-label 나이 :
        div.col-md-2
          input(type='text',class="form-control",ng-model="age")
      div.form-group
        label.col-md-1.control-label 성별 :
        div.col-md-2
          input(type='text',class="form-control",ng-model="sex")
        label.col-md-1.control-label  휴대폰 :
        div.col-md-2
          input(type='text',class="form-control",ng-model="tel")
      div.form-group
        label.col-md-1.control-label 주소지 :
        div.col-md-5
          input(type='text',class="form-control",ng-model="address")
      div.form-group
        label.col-md-1.control-label e-mail :
        div.col-md-2
          input(type='text',class="form-control",ng-model="email")
      br
      div.form-group
        button.col-md-1.btn.btn-default(ng-click='insert_customer()') 추가
