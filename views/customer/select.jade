extends ../angularjs

block content
 div(ng-controller='selectCtl')
  a.btn.btn-default(href='/customer/list') 명단
  br
  br
  form.form-horizontal
    div.form-group
      label.col-md-1.control-label 이름 :
      div.col-md-2
        input(type='text',class="form-control",value="#{name}", readonly)
      label.col-md-1.control-label 나이 :
      div.col-md-2
        input(type='text',class="form-control",value="#{age}", readonly)
    div.form-group
      label.col-md-1.control-label 성별 :
      div.col-md-2
        input(type='text',class="form-control",value="#{sex}", readonly)
      label.col-md-1.control-label  휴대폰 :
      div.col-md-2
        input(type='text',class="form-control",value="#{tel}", readonly)
    div.form-group
      label.col-md-1.control-label 주소지 :
      div.col-md-5
        input(type='text',class="form-control",value="#{address}", readonly)
    div.form-group
      label.col-md-1.control-label e-mail :
      div.col-md-2
        input(type='text',class="form-control",value="#{email}", readonly)
